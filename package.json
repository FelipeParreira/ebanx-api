{
  "name": "boilerplate",
  "version": "1.0.0",
  "main": "index.js",
  "author": "Felipe Parreira",
  "scripts": {
    "build": "tsc",
    "test": "jest --passWithNoTests --testPathIgnorePatterns ./test/routes/*.ts",
    "test:watch": "yarn test --watch",
    "test:e2e": "jest --passWithNoTests test/routes",
    "test:e2e:watch": "yarn test:e2e --watch",
    "lint": "eslint . --ext .ts",
    "lint:fix": "yarn lint --fix",
    "prettier": "prettier --config .prettierrc 'src/**/*.ts' --write",
    "prettier:watch": "onchange 'src/**/*.ts' -- prettier --write {{changed}}",
    "run-server": "node dist/index.js",
    "start": "yarn build && yarn run-server",
    "start:dev": "nodemon"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn prettier && yarn lint"
    }
  },
  "license": "MIT",
  "devDependencies": {
    "@types/body-parser": "^1.19.0",
    "@types/cors": "^2.8.6",
    "@types/express": "^4.17.7",
    "@types/helmet": "^0.0.47",
    "@types/jest": "^26.0.7",
    "@types/morgan": "^1.9.1",
    "@types/node": "^14.0.22",
    "@types/supertest": "^2.0.10",
    "@typescript-eslint/eslint-plugin": "^3.6.0",
    "@typescript-eslint/parser": "^3.6.0",
    "eslint": "7.2.0",
    "eslint-config-airbnb-base": "14.2.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.21.2",
    "eslint-plugin-no-loops": "^0.3.0",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^4.2.5",
    "jest": "^26.1.0",
    "jest-diff": "^26.1.0",
    "nodemon": "^2.0.4",
    "onchange": "^7.0.2",
    "prettier": "^2.0.5",
    "pretty-format": "^26.1.0",
    "supertest": "^4.0.2",
    "ts-jest": "^26.1.3",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.6"
  },
  "dependencies": {
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "helmet": "^3.23.3",
    "http-status-codes": "^1.4.0",
    "morgan": "^1.10.0",
    "winston": "^3.3.3"
  }
}
